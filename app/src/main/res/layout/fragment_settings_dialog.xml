    <!--android:background="@android:color/darker_gray"-->
    <!--android:layout_width="0dp"-->
    <!--android:layout_height="1dp"-->
    <!--app:layout_constraintTop_toBottomOf="@id/seekbar_settings_battery_temp"-->
